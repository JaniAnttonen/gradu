%
% define \appchapter
%
\newcounter{apppage}
\setcounter{apppage}{0}
\newcommand{\appchapter}[1]{%
        \addtocounter{apppage}{\value{page}}
        \clearpage
        \setcounter{page}{1}
        \chapter{#1}
}


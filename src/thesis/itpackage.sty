%
% define \appendices
%
\newcommand{\appendices}{%
  \addtocontents{toc}{\protect\contentsline{chapter}{\appname}{}\relax}
  \newpage
  \appendix
  \renewcommand{\chaptermark}[1]{\markboth{\MakeUppercase{\appendixname\ \thechapter.\ ##1}}{}}
  \lhead{\leftmark}
  \chead{}
  \rhead{\thepage}
  \fancyfoot{}
  \renewcommand{\thepage}{\thechapter-\arabic{page}}
  \setcounter{page}{1}
}

